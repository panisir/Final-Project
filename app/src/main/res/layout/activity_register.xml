<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.finalproject.RegisterActivity">

    <LinearLayout
        android:paddingTop="16dp"
        android:background="@drawable/side_nav_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">


        <com.google.android.gms.common.SignInButton
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></com.google.android.gms.common.SignInButton>

        <TextView
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:paddingTop="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textAlignment="center"
            android:text="Google Hesabınız İle Oturum Açın"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:background="@drawable/ovaledittext"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingLeft="8dp"
                app:srcCompat="@drawable/ic_email_black_36px"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:singleLine="true"
                android:layout_weight="1"
                android:hint="Email Adresiniz ..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:background="@drawable/noborderedittext"
                android:ems="10"
                android:padding="8dp"
                android:id="@+id/register_etEmail"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ovaledittext"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingLeft="8dp"
                app:srcCompat="@drawable/ic_lock_black_36px"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_weight="1"
                android:hint="Şifreniz ..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/noborderedittext"
                android:ems="10"
                android:padding="8dp"
                android:id="@+id/register_etPassword"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ovaledittext"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingLeft="8dp"
                app:srcCompat="@drawable/ic_lock_black_36px"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_weight="1"
                android:hint="Şifreniz Tekrar ..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/noborderedittext"
                android:ems="10"
                android:padding="8dp"
                android:id="@+id/register_etPasswordRepeat"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:textColor="#FFFFFF"
        android:background="@drawable/side_nav_bar"
        android:text="Kayıt Ol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_btnRegister"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
