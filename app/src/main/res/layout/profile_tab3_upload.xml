<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/side_nav_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.finalproject.ProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <ImageButton
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:background="@drawable/side_nav_bar"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_add_a_photo_black_48px"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/profile_upload_imgBtnGallery"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="16dp"
                android:textColor="#000000"
                android:text="Kategori Seçin :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner

                android:entries="@array/spinner_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ovaledittext"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingLeft="8dp"
                app:srcCompat="@drawable/ic_menu_gallery"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:singleLine="true"
                android:layout_weight="1"
                android:hint="Ürün Başlığı ..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:background="@drawable/noborderedittext"
                android:ems="10"
                android:padding="8dp"
                android:id="@+id/profile_upload_etTitle"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ovaledittext"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingLeft="8dp"
                app:srcCompat="@drawable/ic_menu_gallery"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:singleLine="true"
                android:layout_weight="1"
                android:hint="Ürün Açıklaması ..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:background="@drawable/noborderedittext"
                android:ems="10"
                android:padding="8dp"
                android:id="@+id/profile_upload_etDescription"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>

        <Button
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/side_nav_bar"
            android:text="Yükle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_upload_btnUpload"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignParentStart="true"
            />

    </LinearLayout>

</ScrollView>
